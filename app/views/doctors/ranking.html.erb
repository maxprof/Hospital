    <table class="table table-striped">
      <thead>
        <tr>
          <th>Ім'я</th>
          <th>Прізвище</th>
          <th>Кількість пацієнтів за весь час </th>
        </tr>
      </thead>

      <tbody>
        <% @doctor.each do |doc| %>
          <tr>
            <td><%= doc.doctor_first_name %></td>
            <td><%= doc.doctor_second_name %></td>
            <td><%= doc.user_count_seven_days %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div> 

