<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <div class="head">
        <span> </span>
        <h3>Список товарів</h3>
    </div>

    <table class="table table-stripped">
      <thead>
        <tr>
          <th>Название</th>
          <th>Цена</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @prices.each do |price| %>
          <tr>
            <td><%= price.title %></td>
            <td><%= price.price %></td>
            <% if doctor_signed_in?%>
              <td><%= link_to 'Show', price %></td>
              <td><%= link_to 'Edit', edit_price_path(price) %></td>
              <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  

    <% if doctor_signed_in? %>
        <%= link_to 'Новый товар', new_price_path, class:"btn btn-warning" %>
    <% end %>
  </div>
</div>

