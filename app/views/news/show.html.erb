<div class="container">
	<div class="row">
		<p id="notice"><%= notice %></p>
		    <div class="head">
            	<span> </span>
            	<h3>Перегляд</h3>
        	</div>
		<%= image_tag @news.image.url(:medium) %>
		<p>
		  <strong>Title:</strong>
		  <%= @news.title %>
		</p>

		<p>
		  <strong>Text:</strong>
		  <%= @news.text %>
		</p>

		<%= link_to 'Редагувати', edit_news_path(@news), class:"btn btn-success"%> |
		<%= link_to 'Назад', news_index_path, class:"btn btn-warning"%>

	</div>
</div>
