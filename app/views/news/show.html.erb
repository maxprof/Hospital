<div class="container">
	<div class="row">
		<p id="notice"><%= notice %></p>
		    <div class="head">
            	<span> </span>
            	<h3>Перегляд</h3>
        	</div>
        <div class="col-md-3"><%= image_tag @news.image.url(:medium) %></div>
		<div class="col-md-9">
			<p>
			  <strong>Заголовок:</strong>
			  <%= @news.title %>
			</p>

			<p>
			  <strong>Текст:</strong>
			  <%= @news.text %>
			</p>
			<br />
			<%= link_to 'Редагувати', edit_news_path(@news), class:"myBtn" %>
			<%= link_to 'Назад', news_index_path, class:"myBtn myBtn2"%>
		</div>


	</div>
</div>
